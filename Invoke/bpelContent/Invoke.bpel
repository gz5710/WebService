                     partnerLinkType="tns:Invoke"
                     myRole="InvokeProvider"
                     />
        <bpel:partnerLink name="ccspl" partnerLinkType="tns:ccsplt" partnerRole="ccspltrole"></bpel:partnerLink>
        
        <bpel:partnerLink name="haspl" partnerLinkType="tns:hasplt" partnerRole="haspltrole"></bpel:partnerLink>
    </bpel:partnerLinks>
  
    <!-- ================================================================= -->         
    <!-- VARIABLES                                                         -->
    <!-- List of messages and XML documents used within this BPEL process  -->
    <!-- ================================================================= -->         
    <bpel:variables>
        <!-- Reference to the message passed as input during initiation -->
        <bpel:variable name="input"
                  messageType="tns:InvokeRequestMessage"/>
                  
