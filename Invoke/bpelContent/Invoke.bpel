          Reference to the message that will be returned to the requester
          -->
        <bpel:variable name="output"
                  messageType="tns:InvokeResponseMessage"/>
        <bpel:variable name="ccsplResponse" messageType="ns:vereficationResponse"></bpel:variable>
        <bpel:variable name="ccsplRequest" messageType="ns:vereficationRequest"></bpel:variable>
        
        
        <bpel:variable name="hasplResponse" messageType="ns0:evaluationResponse"></bpel:variable>
        <bpel:variable name="hasplRequest" messageType="ns0:evaluationRequest"></bpel:variable>
    </bpel:variables>

    <!-- ================================================================= -->         
    <!-- ORCHESTRATION LOGIC                                               -->
    <!-- Set of activities coordinating the flow of messages across the    -->
    <!-- services integrated within this business process                  -->
    <!-- ================================================================= -->         
    <bpel:sequence name="main">
        
        <!-- Receive input from requester. 
             Note: This maps to operation defined in Invoke.wsdl 
             -->
        <bpel:receive name="receiveInput" partnerLink="client"
                 portType="tns:Invoke"
                 operation="process" variable="input"
                 createInstance="yes"/>
        
        <!-- Generate reply to synchronous request -->
        <bpel:assign validate="no" name="AssignCreditCheckService">
            <bpel:copy>
                <bpel:from><bpel:literal><ns:verefication xmlns:ns="http://service.check.credit" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ns:nom>ns:nom</ns:nom>
  <ns:ssn>ns:ssn</ns:ssn>
</ns:verefication>
</bpel:literal></bpel:from>
                <bpel:to variable="ccsplRequest" part="parameters"></bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:nom]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="ccsplRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:nom]]></bpel:query>
                </bpel:to>
            </bpel:copy>
            <bpel:copy>
                <bpel:from part="payload" variable="input">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:ssn]]></bpel:query>
                </bpel:from>
                <bpel:to part="parameters" variable="ccsplRequest">
                    <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[ns:ssn]]></bpel:query>
                </bpel:to>
            </bpel:copy>
        </bpel:assign>
        <bpel:invoke name="InvokeCreditCheckService" partnerLink="ccspl" operation="verefication" portType="ns:CreditCheckServicePortType" inputVariable="ccsplRequest" outputVariable="ccsplResponse"></bpel:invoke>
        <bpel:if name="If">
            <bpel:condition expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[$ccsplResponse.parameters/ns:return="Approved"]]></bpel:condition>
            <bpel:sequence>
                <bpel:assign validate="no" name="AssignHomeAppraisalService">
            
            
            
            
            
        
                    
                    
                    
                    
                    
                    
                    
                    <bpel:copy>
                        <bpel:from><bpel:literal><ns:evaluation xmlns:ns="http://appraisal.home" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <ns:LoanAmount>0.0</ns:LoanAmount>
  <ns:HomePrice>0.0</ns:HomePrice>
</ns:evaluation>
</bpel:literal></bpel:from>
                        <bpel:to variable="hasplRequest" part="parameters"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                <![CDATA[tns:price]]>
                            </bpel:query>
                        </bpel:from>
                        <bpel:to part="parameters" variable="hasplRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                <![CDATA[ns0:HomePrice]]>
                            </bpel:query>
                        </bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from part="payload" variable="input">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                <![CDATA[tns:loan]]>
                            </bpel:query>
                        </bpel:from>
                        <bpel:to part="parameters" variable="hasplRequest">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                <![CDATA[ns0:LoanAmount]]>
                            </bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:invoke name="InvokeHomeAppraisalService" partnerLink="haspl" operation="evaluation" portType="ns0:HomeAppraisalServicePortType" inputVariable="hasplRequest" outputVariable="hasplResponse"></bpel:invoke>
                <bpel:assign validate="no" name="Assign">
                    
                    
                    
                    
                    
                    
                    
                    <bpel:copy>
                        <bpel:from><bpel:literal><tns:InvokeResponse xmlns:tns="http://invoke.localhost" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:InvokeResponse>
</bpel:literal></bpel:from>
                        <bpel:to variable="output" part="payload"></bpel:to>
                    </bpel:copy>
                    <bpel:copy>
                        <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                            
                            <![CDATA[concat('Bonjour, M. ',$input.payload/tns:nom,' , votre demand de credit est ',$hasplResponse.parameters/ns0:return)]]>
                        </bpel:from>
                        <bpel:to part="payload" variable="output">
                            <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0"><![CDATA[tns:result]]></bpel:query>
                        </bpel:to>
                    </bpel:copy>
                </bpel:assign>
                <bpel:reply name="replyOutput" partnerLink="client" portType="tns:Invoke" operation="process" variable="output" />
            </bpel:sequence>
            <bpel:else>
                <bpel:sequence>
                    <bpel:assign validate="no" name="AssignDenied">
                        <bpel:copy>
                            <bpel:from><bpel:literal><tns:InvokeResponse xmlns:tns="http://invoke.localhost" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <tns:result>tns:result</tns:result>
</tns:InvokeResponse>
</bpel:literal></bpel:from>
                            <bpel:to variable="output" part="payload"></bpel:to>
                        </bpel:copy>
                        <bpel:copy>
                            <bpel:from expressionLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                
                                
                                
                                <![CDATA[concat('Bonjour, M. ',$input.payload/tns:nom,' , votre demand de credit est ',$ccsplResponse.parameters/ns:return)]]>
                            </bpel:from>
                            <bpel:to part="payload" variable="output">
                                <bpel:query queryLanguage="urn:oasis:names:tc:wsbpel:2.0:sublang:xpath1.0">
                                    <![CDATA[tns:result]]>
                                </bpel:query>
                            </bpel:to>
                        </bpel:copy>
                    </bpel:assign>
                    <bpel:reply name="Reply" partnerLink="client" operation="process" portType="tns:Invoke" variable="output"></bpel:reply>
                </bpel:sequence>
            </bpel:else>
        </bpel:if>
        
        
    </bpel:sequence>
</bpel:process>

